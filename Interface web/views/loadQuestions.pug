include header.pug

div(class="container w-50 page")
    div(class="progress mt-3 mb-2")
        <div class="progress-bar" role="progressbar" style="width: 40%;" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100">40%</div>

    h2 Etape 2 : Importer les versions des questionnaires

    form(action="/create/sendQuestions" method="POST" enctype="multipart/form-data")
    
        div(class="container border border-1 rounded mt-3")
            div(class="row row-cols-auto my-2") 
                div(class="col") Liste des etudiants : 

                div(class="col p-0" id="filename")
                    b= uploadedFilename
            
            div(class="row row-cols-auto my-2") 
                div(class="col") Nom du cours : 

                div(class="col p-0" id="lesson")
                    input(type="text", name="lesson", value=lesson)

        
        each questID in versions 
            div(class="row mt-3" id="question" + questID)
                div
                    label(for="fileForm" class="form-label")= "Questionnaire " + questID 
                div
                    input(class="form-control" id="fileForm"+questID type="file" name="question" required)

        if messages.errormsg
            div(class="alert alert-danger" role="alert")
                p= messages.errormsg
        
        
        input(id="versions" type="hidden" name="versions", value=versions)
        input(id="listeEtu" type="hidden" name="listeEtu", value=uploadedFilename)

        div(class="row mt-3")
            div(class="col-12")
                input(class="btn btn-warning float-end" type="submit", value="Submit all files")


include footer.pug