            label(class="col-sm-2 col-form-label") Destinataire :
            div(class="col-sm-10")
                input(type='email' value=email name='email')
        
        div(class="form-group row")
            label(class="col-sm-2 col-form-label") Objet :
            div(class="col-sm-10")
                input(type=text value=object size="20" name='object')

        div
            textarea(name="message" rows="12" cols="100")
