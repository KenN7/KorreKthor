include header.pug

div(class="container page create")

    h1 Envoyez votre email
    
    if messages.failEmail
        div(class="alert alert-danger" role="alert")
            p= messages.failEmail

    form(action="/correction/sendComplainEmail" method="POST")
        div(class="form-group row")
            label(class="col-sm-2 col-md-3 col-form-label") Destinataire :
            div(class="col-sm-10 col-md-9")
                input(type='email' class="form-control" value=email name='email')
        
        div(class="form-group my-2 row")
            label(class="col-sm-2 col-md-3 col-form-label") Objet :
            div(class="col-sm-10 col-md-9")
                input(type=text  class="form-control" value=object size="20" name='object')

        div
            textarea(name="message" class="form-control" rows="12" cols="100")
                ='Bonjour Monsieur ' + destinationName + ',\n\n'
                ="Cordialement,\n"
                = name
                = "\n\n\nLien vers l'examen :  " + url
        
        input(id="copyId" type="hidden" name="copyId" value=copyId)

        
        div(class="row mt-3")
            div(class="col-12")
                input(class="btn btn-warning float-end" type="submit", value="Envoyer l'email")
